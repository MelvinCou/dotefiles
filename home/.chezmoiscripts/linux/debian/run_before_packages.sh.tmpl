#!{{ lookPath "sh" }}
set -eu

echo "Installing packages"
sudo apt-get update -qqy
sudo apt-get install -qqqy --no-install-recommends {{ .packages.debian.base | join " " }}

# Those packages may not be available depending of distro variant
sudo apt-get install -qqqy --no-install-recommends {{ .packages.debian.others | join " " }} || true
